
<% content_for :before_content, back_link(step_path(wizard.previous_key)) if wizard.previous_key %>

<% govuk_back_link text: "Back", href: new_admin_administrator_path(continue: true) %>

<div class="govuk-width-container">
  <%= govuk_form_for current_step, url: step_path do |f| %>
    <%= f.govuk_error_summary %>

    <%= render "wizard/steps/" + current_step.key, current_step: current_step, f: f %>

    <% if wizard.step_can_proceed? %>
      <%= f.govuk_submit(wizard.last_step? ? "Complete" : "Continue") %>
    <% end %>
  <% end %>
</div>
